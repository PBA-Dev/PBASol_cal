modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Run Flask App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check date-fns"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Download date-fns"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Download and verify date-fns"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Check date-fns CDN"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Push"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Git Remote Check"

[[workflows.workflow]]
name = "Run Flask App"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Check date-fns"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -I https://cdn.jsdelivr.net/npm/date-fns@2.29.3/dist/date-fns.min.js"

[[workflows.workflow]]
name = "Download date-fns"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -s https://cdn.jsdelivr.net/npm/date-fns/dist/date-fns.min.js -o static/js/date-fns.min.js"

[[workflows.workflow]]
name = "Download and verify date-fns"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -s https://cdn.jsdelivr.net/npm/date-fns/dist/date-fns.min.js -o static/js/date-fns.min.js && head -n 5 static/js/date-fns.min.js"

[[workflows.workflow]]
name = "Check date-fns CDN"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "curl -I https://cdn.jsdelivr.net/npm/date-fns/dist/date-fns.min.js"

[[workflows.workflow]]
name = "Git Setup"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git init && git add . && git commit -m 'Initial commit'"

[[workflows.workflow]]
name = "Git Push"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git push -u origin main"

[[workflows.workflow]]
name = "Git Remote Check"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "git remote -v"

[deployment]
deploymentTarget = "static"
publicDir = "/"
run = ["sh", "-c", "git init && git add . && git commit -m 'Initial commit'"]

[[ports]]
localPort = 5000
externalPort = 80
